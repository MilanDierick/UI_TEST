<Window x:Class="UI_TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_TEST"
        mc:Ignorable="d"
        FontSize="24"
        Topmost="True"
        Title="{Binding FirstName}" Height="350" Width="525">
    <d:DesignProperties.DataContext>
        <local:PersonContext FirstName="Joe" LastName="Duffy" />
    </d:DesignProperties.DataContext>
    
    <Grid VerticalAlignment="Top">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LastName}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Greeting}"/>

        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Text="First name: "/>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Text="Last name: "/>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Text="Greeting: "/>

    </Grid>
</Window>