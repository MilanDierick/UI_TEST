<Window x:Class="UI_TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_TEST"
        mc:Ignorable="d"
        FontSize="24"
        Topmost="True"
        SizeToContent="Height">
    <d:DesignProperties.DataContext>
        <local:PopulationContext/>
    </d:DesignProperties.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentPresenter Grid.Column="0" Content="{Binding Person1}" ContentTemplate="{StaticResource PersonDetailTemplate}" />
        <ContentPresenter Grid.Column="1" Content="{Binding Person2}" ContentTemplate="{StaticResource PersonDetailTemplate}"/>
    </Grid>
    
 
</Window>